<resources>
    <!-- Base application theme. -->
    <style name="Theme.Aisle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AuthTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="boxStrokeColor">#CCCCCC</item>
        <item name="errorIconDrawable">@null</item>
        <!--        <item name="hintTextColor">@color/selector_til_hint_text_color</item>-->
        <item name="errorTextColor">#F05757</item>
        <item name="boxStrokeErrorColor">#F05757</item>
        <item name="hintEnabled">false</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


</resources>